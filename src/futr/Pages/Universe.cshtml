@page "{id?}"
@model UniverseModel
@{
    @if (string.IsNullOrEmpty(Model.Id)) {
        ViewData["Title"] = "Universes";
        ViewData["MetaTitle"] = "Fictional Universe Taxonomy Research - All Universes";
        ViewData["MetaDescription"] = "Universes include: " + string.Join(", ", Model.List.Where(x => x.Tags.Contains("index")).OrderBy(x => x.Title).Select(x => x.Title).ToArray());
        ViewData["MetaImage"] = "/images/cover.jpg";
        ViewData["MetaImageAlt"] = " Fictional Universe Taxonomy Research Project cover image";
    } else {
        ViewData["Title"] = "Universe " + Model.Item.Title;
        ViewData["MetaTitle"] = "Fictional Universe Taxonomy Research - Universe " + Model.Item.Title;
        ViewData["MetaDescription"] = Model.Item.Readme.Replace("\r", " ").Replace("\n", " ");
        ViewData["MetaImage"] = "/images/cover.jpg";
        ViewData["MetaImageAlt"] = " Fictional Universe Taxonomy Research Project cover image";
    }
}

@if (string.IsNullOrEmpty(Model.Id)) {
    <h1>Universes</h1>

    @foreach (var universe in Model.List.Where(x => x.Tags.Contains("index")).OrderBy(x => x.Title)) {
        <div class="my-tile">
            <a asp-page="Universe" asp-route-id="@universe.SeoName"><img src="@(universe.Tile?.Src ?? "/images/universe-default-tile.jpg")" title="@universe.Tile?.Text
@universe.Tile?.Link@(string.IsNullOrEmpty(universe.Tile?.Author) ? "" : $"\nAuthor: {universe.Tile.Author}")@(string.IsNullOrEmpty(universe.Tile?.License) ? "" : $"\nLicense: {universe.Tile.License}")@(string.IsNullOrEmpty(universe.Tile?.Legal) ? "" : $"\nLegal: {universe.Tile.Legal}")" /></a>
            <div class="my-title">
                @universe.Title
            </div>
        </div>
    }

} else {
    <h1>@Model.Item.Title</h1>

    @await Html.PartialAsync("_ModelTagsLinksImages", Model.Item)

    @await Html.PartialAsync("_PolityList", Model.Item.Polities.Values.AsEnumerable())

    @await Html.PartialAsync("_CivilizationList", (Model.Item.Civilizations.Values.AsEnumerable(), Model.Item.ShowcaseMetrics))

    @await Html.PartialAsync("_BaseModelReadme", Model.Item)
}
